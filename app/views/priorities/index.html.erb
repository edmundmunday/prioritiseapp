<p id="notice"><%= notice %></p>

<h1>Priorities</h1>

<table>
  <thead>
    <tr>
      <th>Feature</th>
      <th>Name</th>
      <th>New sales</th>
      <th>Existing customers</th>
      <th>Strategic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @priorities.each do |priority| %>
      <tr>
        <td><%= priority.feature_id %></td>
        <td><%= priority.name %></td>
        <td><%= priority.new_sales %></td>
        <td><%= priority.existing_customers %></td>
        <td><%= priority.strategic %></td>
        <td><%= link_to 'Show', priority, class: "btn waves-effect waves-light" %></td>
        <td><%= link_to 'Edit', edit_priority_path(priority), class: "btn waves-effect waves-light" %></td>
        <td><%= link_to 'Destroy', priority, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn waves-effect waves-light" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Priority', new_priority_path, class: "btn waves-effect waves-light" %>
